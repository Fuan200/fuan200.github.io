---
import Section from '@/components/Section.astro'

import { skills } from '@cv'
import Python from '@/icons/python.astro'
import Bash from '@/icons/bash.astro'
import HTML from "@/icons/html.astro"
import CSS from "@/icons/css.astro"
import JavaScript from "@/icons/javascript.astro"
import TypeScript from "@/icons/type.astro"
import Angular from '@/icons/angular.astro'
import Node from "@/icons/node.astro"
import MySQL from "@/icons/sql.astro"
import MongoDB from '@/icons/mongodb.astro'
import Docker from '@/icons/docker.astro'
import Git from "@/icons/git.astro"
import GitHub from "@/icons/GitHub.astro"
import Linux from "@/icons/linux.astro"

const SKILLS_ICONS: Record<string, any> = {
    Python,
    Bash,
    HTML,
    CSS,
    JavaScript,
    TypeScript,
    Angular,
    Node,
    MySQL,
    MongoDB,
    Docker,
    Git,
    GitHub,
    Linux
}
---

<Section title="Skills">
    <ul>
        {
            skills.map(({ name }) => {
                const iconName = name === "Next.js" ? "Next" : name
                const Icon = SKILLS_ICONS[iconName]        
                return (
                    <li>
                    {Icon && <Icon />} <span>{name}</span>
                    </li>
                )
            })
        }   
    </ul> 
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        align-items: center;
        background: #eee;
        border-radius: 6px;
        color: black;
        display: flex;
        font-size: 0.8rem;
        font-weight: 500;
        gap: 4px;
        padding: 0.2rem 0.6rem;
    }
</style>